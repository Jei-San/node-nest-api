{
  "compilerOptions": {
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ES2021",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"],
      "@adapters/*": ["src/adapters/*"],
      "@shared/*": ["src/shared/*"],
      "@core/*": ["src/core/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/@types/index.d.ts"]
}
